<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सदस्य नंवर "
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/question_fontSize" />

        <TextView
            android:id="@+id/t3_familyIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/question_fontSize" />
    </LinearLayout>

    <EditText
        android:id="@+id/t3_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="नाम"
        android:padding="@dimen/input_padding"
        android:textColorHint="@color/colorBlackText" />

    <EditText
        android:id="@+id/t3_edit_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="थर"
        android:padding="@dimen/input_padding"
        android:textColorHint="@color/colorBlackText" />

    <RadioGroup
        android:id="@+id/t3_rg_gender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="लिङ्ग"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/question_fontSize" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="पुरूष"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="महिला"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="तेस्रो"
            android:textSize="@dimen/radio_fontSize" />
    </RadioGroup>

    <EditText
        android:id="@+id/t3_edit_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="उमेर"
        android:inputType="number"
        android:padding="@dimen/input_padding"
        android:textColorHint="@color/colorBlackText" />

    <include layout="@layout/separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="घरमुलीको नाता"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/question_fontSize" />


    <RadioGroup
        android:id="@+id/t3_rg_relationToOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="घरमुली आफै"
            android:textSize="@dimen/radio_fontSize" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="बाबु"
            android:textSize="@dimen/radio_fontSize" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="आमा"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="हजुरबुवा"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="हजुरआमा"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छोरा"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छोरी"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="बुहारी"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="श्रीमान"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="श्रीमति"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="दाजु"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="भाइ"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="दिदी"
            android:textSize="@dimen/radio_fontSize" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="बहिनी"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="सासु"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="ससुरा"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="नाती"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="नातीनी"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="अन्य"
            android:textSize="@dimen/radio_fontSize" />

    </RadioGroup>

    <include layout="@layout/separator" />

    <EditText
        android:id="@+id/t3_edit_birthplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="जन्मस्थान "
        android:padding="@dimen/input_padding"
        android:textColorHint="@color/colorBlackText" />

    <include layout="@layout/separator" />

    <RadioGroup
        android:id="@+id/t3_rg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="इमेल"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/question_fontSize" />

        <RadioButton
            android:id="@+id/t3_rad_email_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छ"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:id="@+id/t3_rad_email_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छैन"
            android:textSize="@dimen/radio_fontSize" />
    </RadioGroup>

    <include layout="@layout/separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="गएको ६ महिना वा बढि समयको लागि घर छोडेर अन्यत्र वसोवास गर्नुभएको छ?"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/question_fontSize" />

    <RadioGroup
        android:id="@+id/t3_rg_leftHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/t3_radio_leftHouse_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छ"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:id="@+id/t3_radio_leftHouse_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="छैन"
            android:textSize="@dimen/radio_fontSize" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/t3_layout_ifLeaveHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="छ भने"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/content_fontSize" />

        <EditText
            android:id="@+id/t3_edit_leftHouse_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="स्थान"
            android:padding="@dimen/input_padding"
            android:textColorHint="@color/colorBlackText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="किन"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/content_fontSize" />

        <RadioGroup
            android:id="@+id/t3_rg_leaveHouse_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="अध्ययनको लागि"
                android:textSize="@dimen/radio_fontSize" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="रोजगारी"
                android:textSize="@dimen/radio_fontSize" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="अन्य"
                android:textSize="@dimen/radio_fontSize" />
        </RadioGroup>

    </LinearLayout>

    <include layout="@layout/separator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="शैक्षिक विवरण"
                android:textAlignment="center"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/title_fontSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="शिक्षा"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/question_fontSize" />

            <RadioGroup
                android:id="@+id/t3_rg_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="लेखपढ गर्न नसक्ने"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="बालविकास"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="साक्षर"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="प्रा वि"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="नि मा वि"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="मा वि"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="उ मा वि"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="स्नातक"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="स्नातकोत्तर"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="विद्यावारिधि"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="पढ्ने उमेर नभएको"
                    android:textSize="@dimen/radio_fontSize" />

            </RadioGroup>

            <include layout="@layout/separator" />

            <LinearLayout
                android:id="@+id/t3_layout_school_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="विद्यालयको प्रकार (१६ वर्षसम्म)"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/question_fontSize" />

                <RadioGroup
                    android:id="@+id/t3_rg_school_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="संस्थागत"
                        android:textSize="@dimen/radio_fontSize" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="सामुदायिक"
                        android:textSize="@dimen/radio_fontSize" />

                    <RadioButton
                        android:id="@+id/t3_rb_leaveSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="जान छोडेको"
                        android:textSize="@dimen/radio_fontSize" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/t3_layout_ifLeaveSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGray"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="विद्यालय जान छोडेको हो भने नजानको कारण"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/content_fontSize" />

                    <RadioGroup
                        android:id="@+id/t3_rg_leaveSchool_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="घरमा काम सघाउन"
                            android:textSize="@dimen/radio_fontSize" />


                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="स्कूल टाढा"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="पढ्न मन नलागेर"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="दैवीक प्रकोपकले"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="स्कूलको खर्च नपुगेर"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="बसाई सराइ"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="रोग"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="फरक क्षमतामैत्री नभएर"
                            android:textSize="@dimen/radio_fontSize" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="अन्य कारण"
                            android:textSize="@dimen/radio_fontSize" />

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>


            <include layout="@layout/separator" />

            <LinearLayout
                android:id="@+id/t3_layout_school_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="विद्यालय स्तर (१६ वर्षसम्म)"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/question_fontSize" />

                <RadioGroup
                    android:id="@+id/t3_rg_school_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="बालविकास केन्द्र"
                        android:textSize="@dimen/radio_fontSize" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="आधारभूत तह"
                        android:textSize="@dimen/radio_fontSize" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="माध्यामिक तह"
                        android:textSize="@dimen/radio_fontSize" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <include layout="@layout/t3_rojgari" />

    <include layout="@layout/t3_health" />

    <include layout="@layout/t3_social" />

    <include layout="@layout/t3_transport" />

</LinearLayout>
